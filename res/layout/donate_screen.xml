<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_donate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/donate_title"
        tools:context=".DonateActivity" />

    <Button
        android:id="@+id/btn_donate_paypal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_donate_title"
        android:layout_below="@+id/tv_donate_text"
        android:layout_marginTop="67dp"
        android:background="@drawable/btn_donate_paypal_bg" />

    <TextView
        android:id="@+id/tv_donate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_donate_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/donate_text" />

</RelativeLayout>